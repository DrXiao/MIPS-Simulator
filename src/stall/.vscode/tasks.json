{
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "windows": {
                "command": "g++",
                "args": [
                    "-g",
                    "${file}",
                    "-o",
                    "${fileBasenameNoExtension}.exe",
                    "-Wall",
                    "-Wextra",
                    "-Wshadow",
                    "-fmax-errors=2"
                ],
                "options": {
                    "cwd": "${fileDirname}"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    
    "version": "2.0.0"
}
